<div class="devise_form">
  <div class="login-screen">
    <div class="login-icon">
      <%= image_tag 'illustrations/retina.png' %>
      <h4>Sign up for <small>Open Assessments</small></h4>
    </div>
    <div class="login-form">
      <%= devise_error_messages! %>
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal'}) do |f| %>
        <div class="control-group">
          <%= f.email_field :email, :autofocus => true, :class => "login-field", :placeholder => "Enter your email" %>
          <label class="login-field-icon fui-mail-24" for="user_email"></label>
        </div>
        <div class="control-group">
          <%= f.password_field :password, :class => "login-field",  :placeholder => "Password" %>
          <label class="login-field-icon fui-lock-24" for="user_password"></label>
        </div>
        <div class="control-group">
          <%= f.password_field :password_confirmation, :class => "login-field", :placeholder => 'Re-enter Password' %>
          <label class="login-field-icon fui-lock-24" for="user_password_confirmation"></label>
        </div>
        <%= f.submit "Sign up", :class=>'btn btn-large btn-primary' %>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>