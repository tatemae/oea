<div class="devise_form">
  <div class="login-screen">
    <div class="login-icon">
      <%= image_tag 'quote_bubble.png' %>
      <h4>Change your password</h4>
    </div>
    <div class="login-form">
      <%= devise_error_messages! %>
      <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
        <%= f.hidden_field :reset_password_token %>

        <div class="control-group">
          <%= f.password_field :password, :class => "login-field", :placeholder => "New password" %>
          <label class="login-field-icon fui-lock-24" for="user_password"></label>
        </div>
        <div class="control-group">
          <%= f.password_field :password_confirmation, :class => "login-field", :placeholder => 'Confirm new password' %>
          <label class="login-field-icon fui-lock-24" for="user_password_confirmation"></label>
        </div>
        <%= f.submit "Change my password", :class => "btn btn-large btn-primary" %>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>