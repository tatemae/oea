<div class="devise_form">
  <div class="login-screen">
    <div class="login-icon">
      <%= image_tag 'quote_bubble.png' %>
      <h4>Forgot your password?</h4>
    </div>
    <div class="login-form">
      <%= devise_error_messages! %>
      <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
        <div class="control-group">
          <%= f.email_field :email, :autofocus => true, :placeholder => "Enter your email" %>
          <label class="login-field-icon fui-mail-24" for="user_email"></label>
        </div>
        <%= f.submit "Send me reset instructions", :class => "btn btn-large btn-primary" %>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>